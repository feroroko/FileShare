    months = ["January", "February", "March", "April", "May", "June", 
        "July", "August", "September", "October", "November", "December"];
    %>

    <nav class="navbar navbar-expand-lg navbar-light gb-light"> 
        <a class="navbar-brand" href="<%= request.mainURL %>">FileShare
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent"
        > 
           <ul class="navbar-nav mr-auto">
            <li class="navbar-item active"> 
                <a class="nav-link" href="<%= request.mainURL %>"> 
                    Home <span class="sr-only">(current)</span></a>
                </li>

            <li class="nav-item"> 
                <a class="nav-link" href="<%= request.mainURL %>/Myuploads">My Uploads</a>
            </li> 
            
            <li class="nav-item"> 
